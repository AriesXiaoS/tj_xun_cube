/* miniprogram/pages/account/account.wxss */
.title{
  width: 700rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color:#ea5858;
  border-bottom: 4rpx solid #ea5858;
  
}
.big_box{
  position: fixed;
  top: 0;bottom: 0;
  left: 0;right: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.scroll_box{
  position: fixed;
  top: 85rpx;
  bottom: 120rpx;
  left: 0;right: 0;
  border-bottom: 4rpx solid #ea5858;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.for_box{
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.for_item{
  width: 680rpx;
  height: 115rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
  border: 1rpx solid rgba(234,88,88,0.7);
  box-shadow: 0 1rpx 3rpx 1rpx rgba(234,88,88,0.5);
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  
}
.for_item text{
  width: 250rpx;
  margin: 5rpx;
  text-align: center;
  font-size: 36rpx;
  word-wrap: break-word;
}
.for_item image{
  width: 60rpx;height: 60rpx;
  margin: 20rpx;
  opacity: 0.9;
}



.bottom_box{
  position: fixed;
  bottom: 0;left: 0;right: 0;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;align-items: center;
}
.add_btn{
  width: 600rpx;
  height: 80rpx;
  border: 2rpx solid #ea5858;
  border-radius: 35rpx;
  font-size: 36rpx;
  color: #ea5858;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 5rpx 2rpx rgba(234,88,88,0.7);
}


.add_box{
  position: fixed;
  background-color: whitesmoke;
  bottom: 120rpx;
  left: 5rpx;right: 5rpx;
  height: 300rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  z-index: 20;
  border: 4rpx solid rgba(234,88,88,1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.add_item{
  width: 700rpx;
  height: 80rpx;
  margin: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.add_title{
  width: 150rpx;
  font-size: 36rpx;
  color:#ea5858;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.add_item input{
  width: 400rpx;
  height: 50rpx;
  font-size: 30rpx;
  padding-left: 10rpx;
  border-bottom: 2rpx solid #b9292b;
}
.role_box{
  width: 400rpx;
  height: 50rpx;
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.role{
  width: 130rpx;
  height: 50rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  margin: 10rpx;
}