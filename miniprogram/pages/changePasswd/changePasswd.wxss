/* miniprogram/pages/changePasswd/changePasswd.wxss */
.main_window{
  position: fixed;
  top: 0;bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.username{
  font-size: 36rpx;
  color:#af8abd;
  margin-bottom: 30rpx;
}
.item_box{
  width: 500rpx;
  height: 80rpx;
  margin: 20rpx;
  box-shadow: 0px 1px 2px 1px rgba(234, 88, 88, 0.5);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.front{
  width: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  border-right: 2rpx solid #ea5858;
  font-size: 30rpx;
  color: #ea5858;
}
.item_box input{
  width: 350rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.btn_box{
  margin-top: 50rpx;
}
.btn{
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(rgba(0,0,0,0),rgba(234,88,88,0.7));
  box-shadow:  0px 2px 5px 1px rgba(105, 19, 19, 0.5);
  display: flex;
  justify-content: center;align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #ea5858;
}