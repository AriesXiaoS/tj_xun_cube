.tarbar{
  width: 750rpx;
  height: 50px;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid rgba(50,50,50,0.3);
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;  
  z-index: 10;
}

.tarbar image{
  width: 100px;height: 35px;
}

.main_box{
  position: fixed;
  top: 0;left: 0;right: 0;bottom: 50px;
}
.item_box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.title_pic{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 150rpx;
  margin-top: 50rpx;
}

.input_box{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input_row{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input_row text{
  font-size: 25rpx;
  margin: 20rpx;
}
.choice{
  font-size: 30rpx;
  color: #ea5858;
  margin:20rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}
.input_row input{
  width: 300rpx;
  height: 50rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border: 2rpx solid #b9292b;
  border-radius: 15rpx;
}





.detail_box{
  width: 750rpx;
  position: fixed;
  top: 200rpx;
  bottom: 51px;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid rgba(50,50,50,0.3);
  overflow: hidden;
}
.scroll_box{
  width: 100%;height: 100%;
}
.for_box{
  width: 710rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(234,88,88,0.5);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 1px 2px 1px rgba(234, 88, 88, 0.5);
}


.name{
  font-size: 40rpx;
  width: 200rpx;
  text-align: center;
  color: black;
}
.major{
  width: 300rpx;
  text-align: center;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.6);
}

.detail_window{
  position: fixed;
  top: 0;left: 0;right: 0;bottom: 0;
  z-index: 10;
}

.setting_box{
  width: 750rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.setting{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.setting image{
  width: 55rpx;height: 55rpx;
}
.setting_text{
  width: 300rpx;
  display: flex;
  justify-content: center;align-items: center;
  font-size: 32rpx;
  color:#ea5858;
}
.exit_text{
  width: 200rpx;
  display: flex;
  justify-content: center;align-items: center;
  font-size: 28rpx;
  color:rgba(50,50,50,0.5);
}


.show_more{
  height: 100rpx;
  color: rgba(100, 100, 100, 0.6);
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}