/* miniprogram/pages/updateFile/updateFile.wxss */
.full_width{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.top_detal{
  width: 600rpx;
  margin: 10rpx;
  box-shadow: 1rpx 1rpx 4rpx 2rpx rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.top_detal text{
  width: 550rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  white-space: pre-wrap;
  word-wrap: break-word;
}
.update_btn{
  width: 350rpx;
  height: 70rpx;
  font-size: 30rpx;
  border-radius: 35rpx;
  margin-top: 30rpx;
  background: linear-gradient(rgba(234,88,88,0.7),rgba(0,0,0,0));
  box-shadow: 0 2rpx 4rpx 1rpx rgba(234,88,88,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #b9292b;
  font-weight: bold;
}
.file_name{
  margin: 20rpx;
  width: 600rpx;
  
}


.clean_btn{
  width: 300rpx;
  height: 70rpx;
  font-size: 26rpx;
  border-radius: 35rpx;
  position: fixed;
  bottom: 30rpx;
  z-index: 50;
  background: linear-gradient(rgba(0,0,0,0),rgba(234,88,88,0.7));
  box-shadow: 0 2rpx 4rpx 1rpx rgba(234,88,88,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #b9292b;
  font-weight: bold;
}