/* components/detail/detail.wxss */
.backgroud{
  position: fixed;
  top: 0;left: 0;right: 0;bottom: 0;
  width: 100%;height: 100%;
  background-color: rgb(0, 0, 0);
  opacity: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.window{
  position: absolute;
  width: 650rpx;
  left: 50rpx;
  top: 0rpx;
  opacity: 0;
  bottom: 100rpx;
  background-color: white;
  border-radius: 30rpx;
  border: 5rpx solid #b9292b;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top_pic{
  width: 100rpx;
  height: 100rpx;
  margin:50rpx;
}
.detail_box{
  width: 580rpx;
  position: absolute;
  top: 200rpx;
  bottom: 70rpx;
  border: 2rpx solid #ea5858;
  border-radius: 20rpx;
  overflow: hidden;
}
.bottom_box{
  width: 90%;
  position: absolute;
  bottom: 0;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.bottom_item{
  height: 100%;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  width: 110rpx;

}
.bottom_item image{
  width: 45rpx;height: 45rpx;
}

.scorll_box{
  width: 100%;height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.for_box{
  width: 100%;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(234,88,88,0.5);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  padding-bottom: 3rpx;

}
.for_item{
  height: 60rpx;
  width: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
  padding-left: 10rpx;

}
.item_detail{
  width: 320rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  padding-left: 10rpx;
}
.item_detail_textarea{
  width: 320rpx;
  height: 1rem;
  white-space: pre-wrap;
  word-wrap: break-word;
  color: rgba(234,88,88,0.7);
  padding-left: 10rpx;
}